<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CollectionViewIsEnabledTest.MainPage"
             xmlns:local="clr-namespace:CollectionViewIsEnabledTest"
             x:DataType="local:MainPage">

    <CollectionView ItemsSource="{Binding Items}" SelectionMode="Single" IsEnabled="False">
          <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid Padding="10">                    
                    <Label Text="{Binding .}" TextColor="Black" />
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>

